<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_actionbar"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:titleTextColor="@color/colorPrimary"
                app:title="Profil Saya"
                android:fitsSystemWindows="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

        <TextView
                android:id="@+id/textNamaProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama User"
                android:textSize="18sp"
                android:textColor="@color/black_text2"
                app:layout_constraintStart_toEndOf="@+id/imgUserProfile" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.019" android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar"/>

        <ImageView
                android:id="@+id/imgIconAddress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/imgUserProfile" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

        <ImageView
                android:id="@+id/imgIconTelepon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imgIconAddress" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

        <ImageView
                android:id="@+id/imgIconEmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imgIconTelepon" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

        <TextView
                android:id="@+id/textAlamatProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat User"
                android:textSize="16dp"
                android:textColor="@color/black_text2"
                app:layout_constraintStart_toEndOf="@+id/imgIconAddress" android:layout_marginStart="16dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imgUserProfile"/>

        <TextView
                android:id="@+id/textTeleponProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon User"
                android:textSize="16dp"
                android:textColor="@color/black_text2"
                app:layout_constraintStart_toEndOf="@+id/imgIconTelepon" android:layout_marginStart="16dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textAlamatProfil"/>

        <TextView
                android:id="@+id/textEmailProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email User"
                android:textSize="16dp"
                android:textColor="@color/black_text2"
                app:layout_constraintStart_toEndOf="@+id/imgIconEmail"
                android:layout_marginStart="16dp" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/textTeleponProfil"/>


</androidx.constraintlayout.widget.ConstraintLayout>