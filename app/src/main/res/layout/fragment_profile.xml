<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_actionbar"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/colorPrimary"
            app:title="Profil Saya"
            android:fitsSystemWindows="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/img_user_96"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/textNamaProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama User"
            android:textSize="20sp"
            android:textColor="@color/black_text2"
            app:layout_constraintStart_toEndOf="@+id/imgUserProfile" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.037" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_actionbar"/>

    <ImageView
            android:id="@+id/imgIconAddress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_24"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imgUserProfile" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:id="@+id/imgIconTelepon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_phone_24"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIconAddress" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:id="@+id/imgIconEmail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_email_24"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIconTelepon" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:id="@+id/imgIconPendidikan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_education_24"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imgIconEmail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/textLabelAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textStyle="bold"
            android:textSize="20sp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imgUserProfile"
            app:layout_constraintStart_toEndOf="@+id/imgIconAddress" android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/textAlamatProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta Selatan, DKI Jakarta"
            android:textSize="18sp"
            android:textColor="@color/black_text2"
            app:layout_constraintStart_toEndOf="@+id/imgIconAddress" android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textLabelAlamat"/>

    <TextView
            android:id="@+id/textLabelTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textSize="18sp"
            android:textStyle="bold" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textAlamatProfil"
            app:layout_constraintStart_toEndOf="@+id/imgIconTelepon" android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/textTeleponProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon User"
            android:textSize="18sp"
            android:textColor="@color/black_text2"
            app:layout_constraintStart_toEndOf="@+id/imgIconTelepon" android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textLabelTelepon"/>

    <TextView
            android:id="@+id/textLabelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textStyle="bold"
            android:textSize="18sp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textTeleponProfil"
            app:layout_constraintStart_toEndOf="@+id/imgIconEmail" android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/textEmailProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email User"
            android:textSize="18sp"
            android:textColor="@color/black_text2"
            app:layout_constraintStart_toEndOf="@+id/imgIconEmail"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textLabelEmail"/>

    <TextView
            android:id="@+id/textLabelPendidikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendidikan Terakhir"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textEmailProfil" android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/imgIconPendidikan" android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/textPendidikanProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak terdapat pendidikan terakhir"
            android:textSize="18sp"
            android:textColor="@color/black_text2"
            app:layout_constraintTop_toBottomOf="@+id/textLabelPendidikan"
            android:layout_marginTop="12dp" app:layout_constraintStart_toEndOf="@+id/imgIconPendidikan"
            android:layout_marginStart="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>