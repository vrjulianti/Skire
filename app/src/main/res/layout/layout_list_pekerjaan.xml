<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/view_pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:id="@+id/image_ref"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textTitlePekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:gravity="top"
                android:text="Customer Service"
                android:textSize="14sp"
                android:textColor="@color/black_text"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/imgIconGaji"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_gaji_48" />

            <TextView
                    android:id="@+id/textRangeGaji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:gravity="top"
                    android:text="Rp 3 jt - 5 jt"
                    android:textSize="14sp"
                    android:textColor="@color/black_text"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/imgIconDurasi"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_durasi_48"/>

            <TextView
                    android:id="@+id/textDurasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:gravity="top"
                    android:textColor="@color/black_text"
                    android:text="2 Bulan"
                    android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>